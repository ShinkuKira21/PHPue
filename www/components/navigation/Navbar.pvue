        <!-- Mobile Menu (Hidden by default) -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-emerald-600">
                <a p-for="$route in $routes" href="{{ $route['url'] }}" class="nav-link <?= $current_url === $route['url'] ? 'active' : ''; ?> text-emerald-100 hover:bg-emerald-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">{{ $route['title'] }}</a>
